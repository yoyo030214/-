  font-size: 24rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.3);
}

/* ÂÜúÊà∑Ê†áÁ≠æ */
.farmer-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
