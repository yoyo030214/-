}

/* Â∫ïÈÉ®ÂØºËà™Ê†è */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  position: relative;
  transition: all 0.3s;
}

.tab-item .iconfont {
  font-size: 44rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.tab-item text:last-child {
  font-size: 24rpx;
  color: #999;
}

.tab-item.active {
  color: #07c160;
}

.tab-item.active .iconfont,
.tab-item.active text:last-child {
  color: #07c160;
}

/* ÂõæÁâáÁÇπÂáªÂä®Áîª */
.product-item,
.farmer-item,
.story-item {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.product-item:active,
.farmer-item:active,
.story-item:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* ÂÜúÊà∑‰∫ßÂìÅÊï∞ÈáèÊ†áÁ≠æ */
.farmer-products-count {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background-color: #07c160;
