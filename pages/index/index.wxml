<view class="container">
  <view class="header">
    <text class="title">楚农优品</text>
    <text class="subtitle">新鲜农产品直达</text>
  </view>

  <scroll-view class="product-list" scroll-y>
    <block wx:for="{{products}}" wx:key="id">
      <view class="product-card">
        <image src="{{item.image}}" mode="aspectFill" style="width: 100%; height: 200rpx;"></image>
        <text class="product-name">{{item.name}}</text>
        <text class="product-price">¥{{item.price}}</text>
        <button bindtap="goToProduct" data-id="{{item.id}}">查看详情</button>
      </view>
    </block>
  </scroll-view>
</view>
