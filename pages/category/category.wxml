<view class="container">
  <!-- 标题栏 -->
  <view class="header">
    <view class="page-title">{{pageTitle}}</view>
    <view class="home-btn" bindtap="goToHome">首页</view>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{isLoading}}">
    <view class="loading"></view>
    <view class="loading-text">加载中...</view>
  </view>
  
  <!-- 查看全部按钮 -->
  <view class="view-all-btn" bindtap="viewAllProducts">
    查看全部农产品
  </view>
  
  <!-- 分类列表 -->
  <view class="category-list" wx:if="{{!isLoading}}">
    <block wx:for="{{categories}}" wx:key="id">
      <view 
        class="category-item" 
        bindtap="onCategoryTap" 
        data-category="{{item.name}}"
      >
        <image 
          class="category-icon" 
          src="{{item.icon}}" 
          mode="aspectFit"
          binderror="handleIconError"
          data-index="{{index}}"
        ></image>
        <view class="category-content">
          <view class="category-name">{{item.name}}</view>
          <view class="category-desc">{{item.desc}}</view>
        </view>
        <view class="category-arrow">></view>
      </view>
    </block>
  </view>
  
  <!-- 底部提示 -->
  <view class="footer-tip">
    点击分类查看咸宁本地农产品
  </view>
</view> 