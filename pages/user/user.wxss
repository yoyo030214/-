/* 用户页面样式 */
.container {
  background: #f8f9fa;
  min-height: 100vh;
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(145deg, #66BB6A, #43A047);
  border-radius: 24rpx;
  margin: 32rpx;
  padding: 32rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(67,160,71,0.15);
  position: relative;
  overflow: hidden;
}

/* 光效装饰 */
.user-card::after {
  content: '';
  position: absolute;
  right: -60rpx;
  top: -60rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 50%;
}

/* 头部布局 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 32rpx;
}

/* 用户ID样式 */
.user-id-box {
  flex: 1;
}
.user-id-label {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 8rpx;
}
.user-id {
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

/* VIP徽章 */
.vip-badge {
  background: rgba(255,255,255,0.15);
  border-radius: 32rpx;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
}
.vip-badge text {
  font-size: 24rpx;
}
.badge-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 进度条部分 */
.progress-section {
  margin-bottom: 32rpx;
}
.progress-bar {
  height: 8rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 4rpx;
  margin-bottom: 16rpx;
}
.progress-fill {
  height: 100%;
  background: #FFD700;
  border-radius: 4rpx;
  transition: width 0.5s ease;
}
.progress-text {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 数据网格 */
.data-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}
.data-cell {
  text-align: center;
  padding: 16rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}
.data-cell:active {
  transform: scale(0.96);
  background: rgba(255,255,255,0.15);
}
.cell-value {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 4rpx;
}
.cell-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.name {
  font-size: 36rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.level {
  font-size: 26rpx;
  color: #4CAF50;
  background: #f0f9eb;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.card-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
}

.card-value {
  font-size: 36rpx;
  color: #4CAF50;
  display: block;
  margin-bottom: 5rpx;
}

.card-title {
  font-size: 26rpx;
  color: #666;
}

/* 功能列表 */
.function-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.function-item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-item text {
  font-size: 30rpx;
  color: #333;
}

/* 退出登录 */
.logout-section {
  margin: 40rpx 20rpx;
}

.btn-logout {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.btn-logout:active {
  transform: scale(0.98);
  background: #fff5f5;
}

