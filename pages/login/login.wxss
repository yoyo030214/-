.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 60rpx 0;
}

.logo image {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.login-methods {
  width: 100%;
}

.btn-wechat {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  margin-bottom: 40rpx;
}

.btn-wechat image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.phone-login {
  width: 100%;
}

.input-group {
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.input-group input {
  font-size: 28rpx;
}

.code-group {
  display: flex;
  align-items: center;
}

.code-group input {
  flex: 1;
}

.btn-code {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #07c160;
  background: none;
  border: 2rpx solid #07c160;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

.btn-code.disabled {
  color: #999;
  border-color: #999;
}

.btn-login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.agreement {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.agreement checkbox-group {
  display: flex;
  align-items: center;
}

.agreement checkbox {
  transform: scale(0.7);
  margin-right: 4rpx;
}

.link {
  color: #07c160;
} 