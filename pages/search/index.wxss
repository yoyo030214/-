/* 搜索页面样式 */
.search-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.search-input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 0 15px;
  height: 64rpx;
}

.search-input-wrap icon {
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
}

.clear-icon {
  padding: 8rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #07c160;
  margin-left: 20rpx;
  white-space: nowrap;
}

/* 搜索内容区 */
.search-content {
  padding: 20rpx 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.clear-btn {
  font-size: 24rpx;
  color: #999;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
}

.tag-item {
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 8rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.tag-item.hot {
  background-color: #e8f6e8;
  color: #07c160;
}

.history-section, .hot-section {
  margin-bottom: 30rpx;
}

/* 空结果提示 */
.empty-result {
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.empty-result image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

/* 搜索结果列表 */
.search-result {
  flex: 1;
  overflow-y: auto;
}

.product-item {
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 2rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.product-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-meta {
  display: flex;
  margin-bottom: 10rpx;
}

.product-origin, .product-category {
  font-size: 24rpx;
  color: #999;
  background-color: #f8f8f8;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.product-price-wrap {
  display: flex;
  align-items: baseline;
}

.product-price {
  font-size: 32rpx;
  font-weight: 500;
  color: #ff6b01;
}

.product-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

/* 加载更多 */
.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  margin-right: 10rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 