}

/* ÊµÆÂä®ËèúÂçï */
.float-menu {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 80rpx;
  height: 80rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.float-menu text {
  color: #fff;
  font-size: 40rpx;
}

/* Êõ¥Â§öÂäüËÉΩÂºπÂá∫Â±Ç */
.more-features {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.more-features.show {
  visibility: visible;
  opacity: 1;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.features-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.more-features.show .features-content {
  transform: translateY(0);
}

.features-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.features-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
  padding: 20rpx 0;
}

.features-grid .feature-item {
  text-align: center;
}

.features-grid .feature-item text:first-child {
  font-size: 40rpx;
  color: #07c160;
  margin-bottom: 10rpx;
}

.features-grid .feature-item text:last-child {
  font-size: 24rpx;
  color: #333;
}

/* Â§©Ê∞îÈÉ®ÂàÜÊ†∑Âºè */
.weather-section {
  background: linear-gradient(to right, #07c160, #09b864);
  padding: 20rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
}

.weather-info {
  display: flex;
