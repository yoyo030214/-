/* pages/local-specialties-map/index.wxss */

.container {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.map {
  width: 100%;
  height: 70vh;
}

.map-controls {
  position: absolute;
  right: 20rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.control-btn cover-image {
  width: 40rpx;
  height: 40rpx;
}

.zoom-controls {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.zoom-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}

.zoom-btn:last-child {
  border-bottom: none;
}

.zoom-btn cover-image {
  width: 40rpx;
  height: 40rpx;
}

.info-bar {
  height: 30vh;
  background: #fff;
  padding: 20rpx;
  overflow-y: auto;
}

.info-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-item image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  object-fit: contain;
}

.info-content {
  flex: 1;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 24rpx;
  color: #666;
}

/* 头部样式 */
.header {
  background-color: #07c160;
  color: #ffffff;
  padding: 20rpx 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 地图区域样式 */
.map-container {
  position: relative;
  width: 100%;
  height: 600rpx;
}

.product-map {
  width: 100%;
  height: 100%;
}

.reset-view-btn {
  position: absolute;
  left: 20rpx;
  bottom: 20rpx;
  background-color: #ffffff;
  color: #07c160;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.geo-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background-color: #ffffff;
  color: #07c160;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.btn-text {
  display: flex;
  align-items: center;
}

/* 筛选栏样式 */
.filter-bar {
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333333;
}

.filter-tabs {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.filter-section {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.filter-label {
  font-size: 26rpx;
  color: #666666;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-option {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  color: #333333;
  border-radius: 20rpx;
}

.filter-option.active {
  background-color: #07c160;
  color: #ffffff;
}

/* 产品列表样式 */
.product-list {
  padding: 0 30rpx 30rpx;
}

.no-data {
  text-align: center;
  padding: 60rpx 0;
  color: #999999;
  font-size: 28rpx;
}

.product-card {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.product-image {
  width: 100%;
  height: 360rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.product-county {
  font-size: 24rpx;
  color: #07c160;
  margin-bottom: 16rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.product-culture {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
}

.culture-label {
  color: #666666;
  font-weight: bold;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff6b00;
  font-weight: bold;
}

.product-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 0 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 0;
}

.action-btn.view {
  background-color: #f0f0f0;
  color: #666666;
}

.action-btn.add {
  background-color: #07c160;
  color: #ffffff;
}

/* 地理标识产品样式 */
.geo-product-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.geo-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.geo-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.geo-close {
  font-size: 28rpx;
  color: #666666;
}

.geo-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 30rpx;
}

.geo-card {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.geo-image {
  width: 100%;
  height: 300rpx;
  position: relative;
}

.geo-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.geo-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: #ffffff;
}

.geo-badge.national {
  background-color: #ff6b00;
}

.geo-badge.provincial {
  background-color: #3366ff;
}

.geo-info {
  padding: 20rpx;
}

.geo-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.geo-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.geo-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

/* 产品特性标签样式 */
.product-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.feature-tag {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  background-color: #f0f8f2;
  color: #07c160;
  border-radius: 6rpx;
  border: 1rpx solid #07c16050;
}

/* 详情面板样式 */
.detail-panels {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.panel {
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f9f9f9;
}

.panel-header {
  padding: 16rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f0f8f2;
  color: #07c160;
  font-size: 28rpx;
  font-weight: bold;
}

.panel-icon {
  font-size: 24rpx;
}

.panel-content {
  padding: 16rpx 20rpx;
}

/* 营养成分样式 */
.nutrition-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
}

.nutrition-item {
  display: flex;
  font-size: 24rpx;
  color: #333333;
}

.nutrition-label {
  flex: 1;
  font-weight: bold;
  color: #666666;
}

.nutrition-value {
  flex: 2;
}

/* 生长环境样式 */
.environment-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.environment-item {
  display: flex;
  font-size: 24rpx;
  color: #333333;
}

.environment-label {
  width: 120rpx;
  font-weight: bold;
  color: #666666;
}

.environment-value {
  flex: 1;
}

/* 生产过程样式 */
.process-steps {
  display: flex;
  flex-direction: column;
  position: relative;
}

.process-steps::before {
  content: '';
  position: absolute;
  left: 8rpx;
  top: 30rpx;
  bottom: 30rpx;
  width: 2rpx;
  background-color: #e0e0e0;
  z-index: 1;
}

.process-step {
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 30rpx;
}

.process-step-header {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.step-dot {
  position: absolute;
  left: 0;
  top: 12rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #07c160;
  z-index: 2;
}

.step-stage {
  margin-left: 10rpx;
}

.process-step-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

/* 节气推荐样式 */
.solar-term-container {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.solar-term-header {
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.term-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.term-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.term-date {
  font-size: 24rpx;
  color: #666666;
}

.term-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.term-products {
  white-space: nowrap;
  margin: 20rpx 0;
  padding: 10rpx 0;
}

.term-product-item {
  display: inline-block;
  width: 220rpx;
  margin-right: 20rpx;
  vertical-align: top;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.term-product-item:active {
  transform: scale(0.98);
}

.term-product-image {
  width: 220rpx;
  height: 220rpx;
  position: relative;
  background-color: #f5f5f5;
  overflow: hidden;
}

.term-product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.term-product-item:active .term-product-image image {
  transform: scale(1.05);
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0) 70%, rgba(0,0,0,0.2) 100%);
  pointer-events: none;
}

.term-product-info {
  padding: 12rpx;
}

.term-product-name {
  font-size: 26rpx;
  color: #333333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

.term-product-status {
  font-size: 22rpx;
  color: #999999;
  display: block;
  margin-top: 6rpx;
}

.term-product-status.hot {
  color: #ff6b00;
  font-weight: 500;
}

.next-term {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.view-all {
  color: #07c160;
  font-weight: 500;
}

/* 个性化推荐样式 */
.recommendation-container {
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.recommendation-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-top: 6rpx;
}

.recommended-products {
  white-space: nowrap;
  padding: 10rpx 0;
}

.recommended-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  vertical-align: top;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.recommended-item:active {
  transform: scale(0.98);
}

.recommended-image {
  width: 280rpx;
  height: 280rpx;
  position: relative;
  background-color: #f5f5f5;
  overflow: hidden;
}

.recommended-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.recommended-item:active .recommended-image image {
  transform: scale(1.05);
}

.recommended-info {
  padding: 16rpx;
}

.recommended-name {
  font-size: 28rpx;
  color: #333333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 500;
}

.recommended-reason {
  font-size: 24rpx;
  color: #07c160;
  display: block;
  margin-top: 8rpx;
}

/* 上市状态样式 */
.market-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  color: #ffffff;
  z-index: 1;
}

.market-status.hot {
  background-color: #ff6b00;
}

.market-status.coming {
  background-color: #07c160;
}

.market-status.off {
  background-color: #999999;
}

/* 预约按钮样式 */
.action-btn.reserve {
  background-color: #ff9500;
  color: #ffffff;
} 