.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 订单状态 */
.status-section {
  background: #07c160;
  padding: 40rpx 30rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-info {
  flex: 1;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.status-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.status-image {
  width: 120rpx;
  height: 120rpx;
}

/* 物流信息 */
.logistics-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logistics-info {
  flex: 1;
}

.logistics-status {
  margin-bottom: 10rpx;
}

.logistics-status .status {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.logistics-status .time {
  font-size: 24rpx;
  color: #999;
}

.logistics-company {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.logistics-number {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 收货地址 */
.address-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.address-info {
  flex: 1;
}

.contact {
  margin-bottom: 10rpx;
}

.contact .name {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.contact .phone {
  font-size: 28rpx;
  color: #333;
}

.address {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 商品列表 */
.product-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 30rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.quantity {
  font-size: 24rpx;
  color: #999;
}

/* 订单信息 */
.order-info-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.copy {
  color: #07c160;
  margin-left: 20rpx;
}

/* 价格信息 */
.price-section {
  background: #fff;
  padding: 30rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.price-item.total .label,
.price-item.total .value {
  font-size: 32rpx;
  font-weight: bold;
}

/* 底部操作栏 */
.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.left-buttons {
  display: flex;
}

.left-buttons button {
  margin-right: 20rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.btn-default {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-service {
  display: flex;
  align-items: center;
  background: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.btn-service::after {
  display: none;
}

.btn-service image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.btn-service text {
  font-size: 24rpx;
  color: #666;
} 