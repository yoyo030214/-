.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 商品信息 */
.product-section {
  background: #fff;
  padding: 30rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
}

/* 评分 */
.rating-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.rating-content {
  display: flex;
  align-items: center;
}

.rating-slider {
  flex: 1;
  margin-right: 20rpx;
}

.rating-text {
  font-size: 32rpx;
  color: #e74c3c;
  font-weight: bold;
  min-width: 80rpx;
  text-align: center;
}

/* 评价内容 */
.content-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.content-textarea {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  border-radius: 8rpx;
}

/* 上传图片 */
.image-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 32rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.upload-btn text {
  font-size: 24rpx;
  color: #999;
}

/* 上传进度 */
.upload-progress {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.progress-bar {
  width: 160rpx;
  height: 6rpx;
  background: #eee;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-inner {
  height: 100%;
  background: #e74c3c;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #e74c3c;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #fff;
} 