/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 0;
  background: #f5f5f5;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

/* ÂØºËà™Ê†è */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.nav-left {
  display: flex;
  align-items: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-left: 20rpx;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  color: #333;
  margin-left: 30rpx;
}

/* ÂïÜÂìÅÂàóË°® */
.product-list {
  max-height: calc(100vh - 400rpx);
}

.product-card {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 36rpx;
  color: #e4393c;
  font-weight: bold;
}

.buy-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  border: none;
  border-radius: 0;
}

/* ÂºÄÂèë‰∏≠ÂäüËÉΩ */
.developing-section {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 24rpx;
  color: #666;
}

.developing-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.developing-item {
  background: #f8f8f8;
  padding: 30rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #666;
  font-size: 28rpx;
}

.developing-item:active {
  background: #f0f0f0;
}

/* ÊêúÁ¥¢Ê†è */
.search-bar {
  margin-top: 100rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  position: relative;
  z-index: 99;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* ËΩÆÊí≠Âõæ */
.banner {
  height: 300rpx;
  margin-bottom: 20rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* ÂäüËÉΩÂå∫ */
.feature-section {
  background: #fff;
  padding: 30rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.feature-item image {
  width: 80rpx;
  height: 80rpx;
}

.feature-item text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.feature-desc {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

/* Êú¨Âú∞Áâπ‰∫ßÊé®Ëçê */
.local-products {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.product-scroll {
  white-space: nowrap;
  padding: 10rpx 0;
}

.product-scroll .product-item {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-scroll .product-item:last-child {
  margin-right: 0;
}

.product-scroll .product-item image {
  width: 100%;
  height: 280rpx;
}

/* ÂΩìÂ≠£Êó∂‰ª§Êé®Ëçê */
.seasonal-products {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.seasonal-products .product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

/* ÂÜúÊà∑Áõ¥‰æõÊé®Ëçê */
.farmer-products {
  margin: 30rpx 0;
  padding: 0 20rpx;
}

.farmer-list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.farmer-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.farmer-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background-color: #07c160;
}

.farmer-item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx; /* ÂúÜÂΩ¢Â§¥ÂÉè */
  margin-right: 20rpx;
  object-fit: cover;
  border: 2rpx solid #e0f2e9; /* Ê∑ªÂä†ÊµÖÁªøËâ≤ËæπÊ°Ü */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.farmer-item image:active {
  transform: scale(1.05);
}

.farmer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.farmer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.farmer-location {
  font-size: 26rpx;
  color: #07c160;
  display: block;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.farmer-location::before {
  content: 'üìç';
  margin-right: 4rpx;
}

.farmer-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
  line-height: 1.4;
}

/* ÂÜúÊà∑ÊïÖ‰∫ã */
.farmer-stories {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.story-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.story-item {
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.story-item image {
  width: 100%;
  height: 300rpx;
  display: block;
}

.story-info {
  padding: 20rpx;
}

.farmer-name {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  display: inline-block;
  margin-bottom: 10rpx;
}

.story-title {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

/* ÁâπËâ≤‰∫ßÂìÅ */
.featured-products {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-item image {
  width: 100%;
