.container {
  padding: 40rpx;
}

.service-options {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.option {
  width: 48%;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 24rpx;
  color: #666;
}

.faq-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.faq-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.faq-item:last-child {
  border-bottom: none;
}

.question {
  font-size: 26rpx;
  color: #333;
}

.icon-arrow-right {
  color: #999;
  font-size: 24rpx;
}

.customer-service {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message {
  display: flex;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s ease;
}

.message.user {
  flex-direction: row-reverse;
}

/* 图标头像 */
.avatar-with-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  padding: 10rpx;
}

.content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  background: #fff;
  position: relative;
}

.message.user .content {
  background: #07c160;
  color: #fff;
}

.message.system .content {
  background: #f8f8f8;
  color: #999;
  text-align: center;
  margin: 0 auto;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.dot-flashing {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #07c160;
  animation: dot-flashing 1s infinite linear alternate;
  animation-delay: 0.5s;
}

.dot-flashing::before,
.dot-flashing::after {
  content: '';
  display: inline-block;
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #07c160;
  animation: dot-flashing 1s infinite alternate;
}

.dot-flashing::before {
  left: -30rpx;
  animation-delay: 0s;
}

.dot-flashing::after {
  left: 30rpx;
  animation-delay: 1s;
}

/* 错误提示 */
.error-message {
  padding: 20rpx;
  margin: 20rpx;
  background: #fff1f0;
  border: 1px solid #ffccc7;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.retry-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

/* 输入区域 */
.input-area {
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  height: 80rpx;
  padding: 0 30rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ddd;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.send-btn.active {
  background: #07c160;
}

/* 分割线 */
.divider {
  position: relative;
  text-align: center;
  margin: 40rpx 0;
}

.divider::before,
.divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 1rpx;
  background: #eee;
}

.divider::before {
  left: 50rpx;
}

.divider::after {
  right: 50rpx;
}

.divider text {
  background: #f5f5f5;
  padding: 0 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 常见问题列表 */
.faq-list {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.faq-item {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.faq-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 人工服务 */
.manual-service {
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

/* 修改服务按钮样式 */
.service-btn {
  width: 45%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}

.service-btn:active {
  background: #f5f5f5;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes dot-flashing {
  0% {
    background-color: #07c160;
  }
  50%, 100% {
    background-color: #ebe6ff;
  }
}

/* 工具栏样式 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.mode-controls {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.mode-switch, .free-mode-switch {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.free-mode-switch {
  margin-top: 10rpx;
}

.free-mode-switch.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.mode-switch text, .free-mode-switch text {
  color: #999;
  margin: 0 10rpx;
}

.mode-switch text.active, .free-mode-switch text.active {
  color: #07c160;
  font-weight: 500;
}

.switch-track {
  width: 80rpx;
  height: 40rpx;
  background: #eee;
  border-radius: 20rpx;
  position: relative;
  margin: 0 8rpx;
}

.switch-thumb {
  width: 36rpx;
  height: 36rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  transition: all 0.2s ease;
}

.switch-thumb.off {
  left: 2rpx;
}

.switch-thumb.on {
  left: 42rpx;
  background: #07c160;
}

/* 自由模式指示器 */
.mode-indicator {
  text-align: center;
  padding: 10rpx;
  margin: 10rpx 0;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 8rpx;
}

.mode-indicator text {
  font-size: 24rpx;
  color: #07c160;
} 