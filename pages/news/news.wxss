.news-list {
  padding: 20rpx;
}

.news-item {
  display: flex;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.cover {
  width: 250rpx;
  height: 180rpx;
  border-radius: 12rpx 0 0 12rpx;
}

.content {
  flex: 1;
  padding: 20rpx;
}

.title {
  font-size: 30rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.meta {
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.tags {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #f0f2f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
} 