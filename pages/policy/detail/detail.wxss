/* pages/policy/detail/detail.wxss */
.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.meta {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.policy-image {
  margin: 30rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
}

.policy-image image {
  width: 100%;
  height: 400rpx;
}

.content {
  margin-top: 30rpx;
}

.summary {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

.actions {
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}

.collect-btn, .share-btn {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
}

.collect-btn.collected {
  background-color: #f0f0f0;
  color: #999;
}
