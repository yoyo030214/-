.container {
  padding: 40rpx;
}

.service-options {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.option {
  width: 48%;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  text-align: center;
}

.icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.desc {
  font-size: 24rpx;
  color: #666;
}

.faq-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.faq-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.faq-item:last-child {
  border-bottom: none;
}

.question {
  font-size: 26rpx;
  color: #333;
}

.icon-arrow-right {
  color: #999;
  font-size: 24rpx;
}

.customer-service {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f6f7f8;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx 30rpx;
  overflow-y: auto;
}

.message {
  margin-bottom: 30rpx;
  display: flex;
  align-items: flex-start;
}

.avatar-with-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #f1f1f1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16rpx;
}

.avatar-icon {
  width: 40rpx;
  height: 40rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.message.user .avatar-with-icon {
  margin-right: 0;
  margin-left: 16rpx;
  background-color: #e6f7ff;
}

.message .content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: relative;
}

.message.assistant .content {
  background-color: #fff;
  border: 1rpx solid #eaeaea;
  border-top-left-radius: 0;
}

.message.user .content {
  background-color: #dcf8c6;
  border-top-right-radius: 0;
}

.message.system .content {
  background-color: #f1f1f1;
  border: 1rpx dashed #ccc;
}

.message .time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

/* 加载动画 */
.loading {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.dot-flashing {
  position: relative;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #07c160;
  animation: dot-flashing 1s infinite linear alternate;
  animation-delay: 0.5s;
}

.dot-flashing::before, .dot-flashing::after {
  content: '';
  display: inline-block;
  position: absolute;
  top: 0;
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background-color: #07c160;
  animation: dot-flashing 1s infinite alternate;
}

.dot-flashing::before {
  left: -24rpx;
  animation-delay: 0s;
}

.dot-flashing::after {
  left: 24rpx;
  animation-delay: 1s;
}

@keyframes dot-flashing {
  0% { background-color: #07c160; }
  50%, 100% { background-color: rgba(7, 193, 96, 0.2); }
}

/* 错误提示 */
.error-message {
  padding: 20rpx 30rpx;
  background-color: #fff1f0;
  border-top: 1rpx solid #ffccc7;
  font-size: 28rpx;
  color: #ff4d4f;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.retry-btn {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

/* 输入区域 */
.input-area {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eaeaea;
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  margin-left: 20rpx;
  background-color: #e0e0e0;
  color: #999;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  transition: all 0.3s;
}

.send-btn.active {
  background-color: #07c160;
  color: #fff;
}

/* 分割线 */
.divider {
  position: relative;
  text-align: center;
  padding: 40rpx 0 20rpx;
  color: #999;
  font-size: 26rpx;
}

.divider::before, .divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 1rpx;
  background-color: #eaeaea;
}

.divider::before {
  left: 30rpx;
}

.divider::after {
  right: 30rpx;
}

/* FAQ列表 */
.faq-list {
  padding: 0 30rpx;
}

.faq-item {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.faq-item .arrow {
  font-size: 24rpx;
  color: #07c160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

/* 人工服务 */
.manual-service {
  padding: 20rpx 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
}

.service-btn {
  flex: 1;
  height: 88rpx;
  margin: 0 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  color: #333;
  border: 1rpx solid #eaeaea;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* AI助手面板样式 */
.ai-panel .chat-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f8f8f8;
  padding: 0 0 20rpx 0;
}

.ai-panel .chat-messages {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.ai-panel .message {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.ai-panel .user-message {
  align-items: flex-end;
}

.ai-panel .ai-message {
  align-items: flex-start;
}

.ai-panel .message-content {
  max-width: 80%;
  padding: 20rpx 30rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-word;
}

.ai-panel .user-message .message-content {
  background-color: #07c160;
  color: #fff;
  border-radius: 20rpx 20rpx 0 20rpx;
}

.ai-panel .ai-message .message-content {
  background-color: #ffffff;
  color: #333;
  border-radius: 20rpx 20rpx 20rpx 0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.ai-panel .input-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.ai-panel .chat-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.ai-panel .send-button {
  width: 120rpx;
  height: 80rpx;
  margin-left: 20rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}

.ai-panel .send-button[disabled] {
  background-color: #a8e3c0;
  color: #fff;
}

.ai-panel .loading-indicator {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 选项卡样式 */
.tab-container {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eaeaea;
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
  transition: all 0.3s;
}

.tab.active {
  color: #07c160;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

/* 面板样式 */
.panel {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 工具栏 */
.toolbar {
  padding: 20rpx 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eaeaea;
}

.mode-controls {
  display: flex;
  align-items: center;
}

.mode-switch, .free-mode-switch {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.switch-track {
  width: 80rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  border-radius: 20rpx;
  position: relative;
  margin: 0 10rpx;
  transition: background-color 0.3s;
}

.switch-thumb {
  width: 36rpx;
  height: 36rpx;
  background-color: #fff;
  border-radius: 18rpx;
  position: absolute;
  top: 2rpx;
  transition: all 0.3s;
}

.switch-thumb.off {
  left: 2rpx;
}

.switch-thumb.on {
  left: 42rpx;
  background-color: #07c160;
}

.mode-switch text.active, .free-mode-switch text.active {
  color: #07c160;
}

.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 模式指示器 */
.mode-indicator {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #07c160;
} 