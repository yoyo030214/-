<view class="product-detail">
  <!-- 商品主图 -->
  <image 
    src="/images/{{product.image}}" 
    mode="aspectFill" 
    style="width: 100%; height: 300rpx;"
  />

  <!-- 尺寸选择 -->
  <view class="size-selector">
    <image 
      src="/images/dabaicai.jpg" 
      style="width: 80rpx; height: 80rpx; margin-right: 20rpx;"
    />
    <image 
      src="/images/qingzhuantea.jpg" 
      style="width: 80rpx; height: 80rpx;"
    />
  </view>

  <!-- 轮播图 -->
  <swiper class="product-swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="3000" duration="500">
    <swiper-item>
      <image 
        class="product-image" 
        src="/images/products/cabbage.webp"
        mode="aspectFill"
      />
    </swiper-item>
    <swiper-item>
      <image 
        class="product-image" 
        src="/images/qingzhuantea.webp"
        mode="aspectFill"
      />
    </swiper-item>
  </swiper>
</view>