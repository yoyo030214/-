.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.status-scroll {
  white-space: nowrap;
}

.status-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.status-item {
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.status-item.active {
  color: #07c160;
  font-weight: bold;
}

.status-item.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -10rpx;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  flex: 1;
  height: calc(100vh - 100rpx);
}

.order-item {
  margin: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-info {
  display: flex;
  align-items: center;
}

.order-no {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.order-status {
  font-size: 24rpx;
  color: #07c160;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

/* 商品列表 */
.product-list {
  padding: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.quantity {
  font-size: 24rpx;
  color: #999;
}

/* 订单底部 */
.order-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.total-info {
  text-align: right;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.total-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-left: 10rpx;
}

.action-buttons {
  display: flex;
  justify-content: flex-end;
}

.action-buttons button {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}

.btn-default {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-cancel {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 加载更多 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 