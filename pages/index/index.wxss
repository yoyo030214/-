/* Âä©ÂÜúÊ¥ªÂä® */
.promotion-section {
  background: #fff;
  padding: 30rpx;
}

.promotion-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.promotion-item {
  display: flex;
  gap: 20rpx;
