.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
}

.search-input icon {
  margin-right: 12rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 分类标签 */
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  white-space: nowrap;
}

.category-list {
  padding: 0 20rpx;
  display: inline-flex;
  gap: 20rpx;
}

.category-item {
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 28rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #fff;
  background: #07c160;
}

/* 故事列表 */
.story-grid {
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.story-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.story-item image {
  width: 100%;
  height: 300rpx;
}

.story-info {
  padding: 20rpx;
}

.farmer-name {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  display: inline-block;
}

.story-title {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.story-meta {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
} 