:root {
  --primary-color: #0C34B8;
  --secondary-color: #4A90E2;
  --success-color: #52c41a;
  --warning-color: #fa8c16;
}

.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 40rpx;
}

.header {
  padding: 20rpx 0;
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.policy-list {
  padding: 20rpx;
}

.policy-item {
  display: flex;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}

.policy-image {
  width: 200rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

.policy-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}

.policy-title {
  font-size: 30rpx;
  color: #333;
}

.policy-date {
  font-size: 24rpx;
  color: #999;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.title-wrapper {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.section-desc {
  font-size: 24rpx;
  color: #999;
}

.policy-content {
  padding: 24rpx;
}

.policy-main {
  margin-bottom: 16rpx;
}

.policy-summary {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.policy-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.meta-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.source-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 助农活动 */
.promotion-section {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.more {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.arrow {
  margin-left: 8rpx;
  font-size: 24rpx;
}

.promotion-list {
  margin-top: 24rpx;
}

.promotion-item {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.promo-image {
  width: 100%;
  height: 360rpx;
  border-radius: 12rpx 12rpx 0 0;
  object-fit: cover;
  background-color: #f5f5f5;
}

.promotion-info {
  padding: 24rpx;
}

.promo-content {
  margin-bottom: 16rpx;
}

.promotion-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.promotion-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.promotion-meta {
  display: flex;
  gap: 32rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #888;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 底部提示 */
.bottom-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 30rpx;
  color: #999;
  font-size: 24rpx;
}

.divider {
  width: 80rpx;
  height: 1rpx;
  background: #e5e5e5;
  margin: 0 16rpx;
}

/* 加载动画 */
.loading {
  text-align: center;
  padding: 24rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 20rpx 30rpx;
  background: #fff;
}

.search-input {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
}

.search-input icon {
  margin-right: 12rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 分类标签 */
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  white-space: nowrap;
}

.category-list {
  padding: 0 20rpx;
  display: inline-flex;
  gap: 20rpx;
}

.category-item {
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 28rpx;
  transition: all 0.3s;
}

.category-item.active {
  color: #fff;
  background: #07c160;
}

/* 标签页样式 */
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  padding: 20rpx 0;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 筛选按钮 */
.filter-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  background: #4CAF50;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.filter-btn-hover {
  transform: scale(0.95);
  box-shadow: 0 4rpx 20rpx rgba(76, 175, 80, 0.4);
}

.filter-btn image {
  width: 48rpx;
  height: 48rpx;
}

/* 分类导航升级版 */
.category-nav {
  height: 100rpx;
  background: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.category-item {
  display: inline-flex;
  align-items: center;
  padding: 0 32rpx;
  height: 80rpx;
  margin: 0 10rpx;
  background: #f5f5f7;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s cubic-bezier(0.4,0,0.2,1);
}

.category-item.active {
  background: linear-gradient(135deg, #0C34B8, #4A90E2);
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(12,52,184,0.3);
}

.category-item.more {
  background: linear-gradient(45deg, #0C34B8, #4A90E2);
  color: #fff;
  padding-right: 48rpx;
  position: relative;
}

.more-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  opacity: 0.8;
}

/* 数据看板 */
.dashboard {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #0C34B8, #4A90E2);
  border-radius: 24rpx;
  margin: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(12,52,184,0.2);
}

.dashboard-item {
  position: relative;
  padding: 30rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 16rpx;
  color: #fff;
}

.dashboard-item .number {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 10rpx;
}

.dashboard-item .label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 智能导航 */
.smart-nav {
  position: relative;
  margin: 0 30rpx;
}

.nav-scroll {
  white-space: nowrap;
}

.nav-item {
  display: inline-flex;
  align-items: center;
  padding: 0 36rpx;
  height: 80rpx;
  margin-right: 20rpx;
  background: #f5f5f7;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
  position: relative;
}

.nav-item.active {
  background: #0C34B8;
  color: #fff;
  transform: scale(1.05);
}

.more-indicator {
  margin-left: 8rpx;
  font-weight: bold;
  transform: rotate(90deg);
}

/* 政策矩阵 */
.policy-matrix {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

/* 卡片容器 */
.policy-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.08);
  margin-bottom: 24rpx;
  transition: transform 0.2s ease;
}

/* 封面图 */
.policy-cover {
  width: 100%;
  height: 320rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx 12rpx 0 0;
  object-fit: cover;
}

/* 内容区 */
.card-content {
  padding: 24rpx;
}

/* 头部布局 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 政策类型 */
.policy-type {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

/* 政策类型颜色 */
.policy-type.planting {
  background: #e6f7ff;
  color: #1677ff;
}

.policy-type.machinery {
  background: #fff7e6;
  color: #fa8c16;
}

.policy-type.animal {
  background: #f6ffed;
  color: #52c41a;
}

.policy-type.industry {
  background: #f9f0ff;
  color: #722ed1;
}

.policy-type.land {
  background: #e6fffb;
  color: #13c2c2;
}

.policy-type.green {
  background: #fcffe6;
  color: #a0d911;
}

/* 摘要 */
.policy-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 底部操作区 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-item {
  font-size: 20rpx;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 收藏按钮 */
.collect-btn {
  padding: 4rpx 12rpx;
  font-size: 20rpx;
}

.collect-btn.collected {
  background: #0C34B8;
  color: #fff;
}

/* 添加加载过渡效果 */
image {
  transition: opacity 0.3s;
  background: #f5f5f5 url(/图片/loading.gif) no-repeat center;
}

image[src] {
  opacity: 1;
  background: none;
}

.policy-image, placeholder {
  background: #f0f0f0;
}

.nav-shadow {
  height: 6rpx;
  background: linear-gradient(180deg, rgba(0,0,0,0.08), transparent);
  margin-top: -10rpx;
}

.policy-card:active {
  transform: scale(0.98);
}

@media (min-width: 768px) {
  .policy-matrix {
    grid-template-columns: repeat(auto-fill, minmax(400rpx, 1fr));
    gap: 40rpx;
  }
  
  .policy-image {
    height: 420rpx;
  }
  
  .policy-title {
    font-size: 36rpx;
  }
}

.more-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.more-text {
  font-size: 28rpx;
  color: #666;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 图片加载动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

image[lazy-load="true"] {
  animation: fadeIn 0.3s ease;
}

.promotion-item:active {
  transform: scale(0.98);
} 