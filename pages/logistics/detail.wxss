.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 物流信息 */
.logistics-info {
  background: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.info-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.company {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.company image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.company text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.number {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.copy {
  color: #07c160;
}

.info-content {
  padding: 30rpx;
}

.timeline {
  position: relative;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: #eee;
}

.timeline-item {
  position: relative;
  padding-left: 60rpx;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 8rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #ddd;
}

.timeline-item.active::before {
  background: #07c160;
}

.timeline-item .time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.timeline-item .content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

/* 刷新按钮 */
.refresh-btn {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.refresh-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.refresh-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
} 